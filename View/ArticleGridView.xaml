<UserControl
    x:Class="MiniERP.UI.View.ArticleGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/new.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="New" />
                </StackPanel>
            </Button>
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/duplicate.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Duplicate" />
                </StackPanel>
            </Button>
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding Articles}"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Name}"
                    Header="物料编码" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Price, StringFormat='{}{0:F2}'}"
                    Header="单价" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding MinimumPrice}"
                    Header="描述" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Description}"
                    Header="单位" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Specification}"
                    Header="启用" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Discount}"
                    Header="启用" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Note}"
                    Header="启用" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
